<UserControl x:Class="BlackSpiritHelper.TimerListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlackSpiritHelper"
             xmlns:core="clr-namespace:BlackSpiritHelper.Core;assembly=BlackSpiritHelper.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border DataContext="{x:Static core:TimerListDesignModel.Instance}">
        <ItemsControl ItemsSource="{Binding Items}">

            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <ItemsControl ItemsSource="{Binding}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" Margin="5 0" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.Template>
                            <ControlTemplate>
                                
                                <!-- Group list -->
                                <Grid Background="{StaticResource TimerGroupListBackgroundBrushKey}" Margin="10 0 10 10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0"
                                          Background="{StaticResource TimerGroupListMenuBackgroundBrushKey}">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <!-- Group Play Button -->
                                            <Button Content="{StaticResource FontAwesomePlayIcon}"
                                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                                    Style="{StaticResource RegularButton}" 
                                                    FontSize="10"
                                                    Width="30"
                                                    Height="30"
                                                    Margin="10" />
                                            
                                            <!-- Group Name -->
                                            <TextBlock Text="Placeholder" 
                                                       Foreground="{StaticResource TimerGroupListMenuTitleForegroundBrushKey}"
                                                       FontFamily="{StaticResource LatoHeavy}"
                                                       FontSize="18"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <!-- Add Button -->
                                            <Button Content="{StaticResource FontAwesomePlusIcon}"
                                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                                    Style="{StaticResource RegularButton}"
                                                    Margin="0 10 10 10"
                                                    Width="30"
                                                    Height="30"
                                                    VerticalAlignment="Center"
                                                    FontSize="10" />
                                            
                                            <!-- Group Settings Button -->
                                            <Button Content="{StaticResource FontAwesomeCogIcon}"
                                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                                    Style="{StaticResource RegularButton}"
                                                    Margin="0 10 10 10"
                                                    Width="30"
                                                    Height="30"
                                                    VerticalAlignment="Center"
                                                    FontSize="10" />
                                        </StackPanel>
                                        
                                        <!-- <Button Content="{Binding /GroupID}" /> -->
                                    </Grid>
                                    
                                    <ItemsPresenter Grid.Row="1" Margin="0 5" />
                                </Grid>
                                
                            </ControlTemplate>
                        </ItemsControl.Template>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <!-- Group list ITEM -->
                                <local:TimerListItemControl 
                                    Width="270" 
                                    Height="140"
                                    Margin="5" />
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>
    </Border>
    
</UserControl>
