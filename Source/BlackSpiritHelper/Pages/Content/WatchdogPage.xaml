                   FontSize="14"
                   TextWrapping="Wrap"
                   Margin="10 10"
                   TextAlignment="Center"
                   FontFamily="{StaticResource LatoLightItalic}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </StackPanel>
