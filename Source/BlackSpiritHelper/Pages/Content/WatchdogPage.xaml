<local:BasePage
    x:Class="BlackSpiritHelper.WatchdogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:BlackSpiritHelper.Core;assembly=BlackSpiritHelper.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlackSpiritHelper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WatchdogPage"
    d:DesignHeight="450"
    d:DesignStyle="{StaticResource WindowBackgroundControlStyle}"
    d:DesignWidth="800"
    x:TypeArguments="core:WatchdogPageViewModel"
    mc:Ignorable="d">

    <!--  Watchdog sections  -->
    <ScrollViewer DataContext="{Binding ApplicationDataContent.WatchdogData, Source={x:Static local:ViewModelLocator.Instance}}" VerticalScrollBarVisibility="Auto">

        <StackPanel Margin="10" Orientation="Vertical">
            <!--  Connection Watcher  -->
            <local:WatchdogConnectionWatcherControl />
        </StackPanel>

    </ScrollViewer>
</local:BasePage>
