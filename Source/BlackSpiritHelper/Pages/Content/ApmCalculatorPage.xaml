<local:BasePage
    x:Class="BlackSpiritHelper.ApmCalculatorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:BlackSpiritHelper.Core;assembly=BlackSpiritHelper.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlackSpiritHelper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ApmCalculatorPage"
    d:DesignHeight="800"
    d:DesignStyle="{StaticResource WindowBackgroundControlStyle}"
    d:DesignWidth="800"
    x:TypeArguments="core:ApmCalculatorPageViewModel"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Padding="10" DataContext="{Binding ApplicationDataContent.ApmCalculatorData, Source={x:Static local:ViewModelLocator.Instance}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Current Session  -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Image Watermark  -->
                    <Image
                        Grid.RowSpan="10"
                        Width="125"
                        Margin="0,87,0,0"
                        VerticalAlignment="Top"
                        Opacity="0.1"
                        Source="/BlackSpiritHelper;component/Resources/Images/Logo/logo_red_text_512.png" />

                    <!--  Title  -->
                    <Grid Grid.Row="0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource LatoHeavy}"
                            FontSize="32"
                            Foreground="{StaticResource FormTitleForegroundBrushKey}">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Text" Value="START NEW SESSION" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsRunning}" Value="False" />
                                                <Condition Binding="{Binding CurrentSession.TotalActions}" Value="0" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Text" Value="START NEW SESSION" />
                                        </MultiDataTrigger>
                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                            <Setter Property="Text" Value="CURRENT SESSION" />
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsRunning}" Value="False" />
                                                <Condition Binding="{Binding CurrentSession.TotalActions, Converter={local:GreaterThanConverter}, ConverterParameter='0'}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Text" Value="SESSION RESULTS" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!--  Controls  -->
                    <Grid Grid.Row="1">
                        <!--  Control Button  -->
                        <Button
                            Width="40"
                            Height="40"
                            FontFamily="{StaticResource FontAwesomeSolid}"
                            FontSize="18">
                            <Button.Style>
                                <Style BasedOn="{StaticResource RegularButtonNoColor}" TargetType="{x:Type Button}">
                                    <Setter Property="Margin" Value="0" />
                                    <Style.Triggers>
                                        <!--  Play Trigger  -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsRunning}" Value="False" />
                                                <Condition Binding="{Binding CurrentSession.TotalActions}" Value="0" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Command" Value="{Binding PlayCommand}" />
                                            <Setter Property="Content" Value="{StaticResource FontAwesomePlayIcon}" />
                                        </MultiDataTrigger>
                                        <!--  Stop Trigger  -->
                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                            <Setter Property="Command" Value="{Binding StopCommand}" />
                                            <Setter Property="Content" Value="{StaticResource FontAwesomeStopIcon}" />
                                        </DataTrigger>
                                        <!--  Restart Trigger  -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsRunning}" Value="False" />
                                                <Condition Binding="{Binding CurrentSession.TotalActions, Converter={local:GreaterThanConverter}, ConverterParameter='0'}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Margin" Value="0,0,75,0" />
                                            <Setter Property="Command" Value="{Binding RestartCommand}" />
                                            <Setter Property="Content" Value="{StaticResource FontAwesomeRestartIcon}" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!--  Archivate Button  -->
                        <Button
                            Width="40"
                            Height="40"
                            Margin="75,0,0,0"
                            Command="{Binding ArchivateCommand}"
                            CommandParameter="{Binding CurrentSession}"
                            FontFamily="{StaticResource FontAwesomeRegular}"
                            FontSize="18"
                            ToolTipService.ShowOnDisabled="True">
                            <Button.Style>
                                <Style BasedOn="{StaticResource RegularButtonNoColor}" TargetType="{x:Type Button}">
                                    <Setter Property="Content" Value="{StaticResource FontAwesomeArchiveIcon}" />
                                    <Setter Property="IsEnabled" Value="True" />
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Setter Property="ToolTip" Value="Archivate" />
                                    <Style.Triggers>
                                        <!--  Restart Trigger  -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsRunning}" Value="False" />
                                                <Condition Binding="{Binding CurrentSession.TotalActions, Converter={local:GreaterThanConverter}, ConverterParameter='0'}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                        <DataTrigger Binding="{Binding CurrentSession.IsArchived}" Value="True">
                                            <Setter Property="ToolTip" Value="Archived" />
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Setter Property="Content" Value="{StaticResource FontAwesomeCheckCircleIcon}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <!--  1st Information Wrapper  -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <!--  Average APM  -->
                        <Grid
                            Grid.Column="0"
                            MinWidth="225"
                            Margin="0,0,50,0"
                            HorizontalAlignment="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="32"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding CurrentSession.AverageApm, StringFormat='{}{0:#,0.#}'}" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="AVERAGE APM" />
                        </Grid>

                        <!--  Elapsed Time  -->
                        <Grid
                            Grid.Column="1"
                            MinWidth="225"
                            Margin="50,0,0,0"
                            HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="32"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding CurrentSession.ElapsedTime, Converter={local:TimeSpanToStringConverter}, ConverterParameter='hms'}" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="ELAPSED TIME" />
                        </Grid>
                    </Grid>

                    <!--  Spacer  -->
                    <Border Grid.Row="3" Style="{StaticResource FormItemSpacer}" />

                    <!--  2nd Information Wrapper  -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <!--  Highest APM  -->
                        <Grid
                            Grid.Column="0"
                            MinWidth="225"
                            Margin="0,0,50,0"
                            HorizontalAlignment="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="32"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding CurrentSession.HighestApm, StringFormat='{}{0:#,0.#}'}" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="HIGHEST APM" />
                        </Grid>

                        <!--  Total Actions  -->
                        <Grid
                            Grid.Column="1"
                            MinWidth="225"
                            Margin="50,0,0,0"
                            HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="32"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding CurrentSession.TotalActions, StringFormat='{}{0:#,0.#}'}" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="TOTAL ACTIONS" />
                        </Grid>
                    </Grid>

                    <!--  3rd Information Wrapper  -->
                    <Grid Grid.Row="5" Visibility="{Binding IsRunning, Converter={local:BooleanToVisibilityGoneConverter}}">
                        <!--  Current APM  -->
                        <Grid MinWidth="225" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="32"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding CurrentSession.CurrentApm, StringFormat='{}{0:#,0.#}'}" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="CURRENT APM" />
                        </Grid>

                    </Grid>

                    <!--  Spacer  -->
                    <Border Grid.Row="6" Style="{StaticResource FormItemSpacer}" />

                    <!--  4th Information Wrapper  -->
                    <Grid Grid.Row="7">

                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <!--  Track Keyboard  -->
                            <Grid MinWidth="100">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    IsChecked="{Binding TrackKeyboard}">
                                    <CheckBox.Style>
                                        <Style BasedOn="{StaticResource CheckBoxLarge}" TargetType="{x:Type CheckBox}">
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsRunning}" Value="False" />
                                                        <Condition Binding="{Binding CurrentSession.TotalActions}" Value="0" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="IsEnabled" Value="True" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    FontFamily="{StaticResource LatoHeavy}"
                                    FontSize="10"
                                    Foreground="{StaticResource ForegroundLightBrushKey}"
                                    Text="KEYBOARD" />
                            </Grid>

                            <!--  Track Mouse Click  -->
                            <Grid MinWidth="100">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    IsChecked="{Binding TrackMouseClick}">
                                    <CheckBox.Style>
                                        <Style BasedOn="{StaticResource CheckBoxLarge}" TargetType="{x:Type CheckBox}">
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsRunning}" Value="False" />
                                                        <Condition Binding="{Binding CurrentSession.TotalActions}" Value="0" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="IsEnabled" Value="True" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    FontFamily="{StaticResource LatoHeavy}"
                                    FontSize="10"
                                    Foreground="{StaticResource ForegroundLightBrushKey}"
                                    Text="MOUSE CLICK" />
                            </Grid>

                            <!--  Track Mouse Double Click  -->
                            <Grid MinWidth="100">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    IsChecked="{Binding TrackMouseDoubleClick}">
                                    <CheckBox.Style>
                                        <Style BasedOn="{StaticResource CheckBoxLarge}" TargetType="{x:Type CheckBox}">
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsRunning}" Value="False" />
                                                        <Condition Binding="{Binding CurrentSession.TotalActions}" Value="0" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="IsEnabled" Value="True" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    FontFamily="{StaticResource LatoHeavy}"
                                    FontSize="10"
                                    Foreground="{StaticResource ForegroundLightBrushKey}"
                                    Text="MOUSE DOUBLE CLICK" />
                            </Grid>

                            <!--  Track Mouse Wheel  -->
                            <Grid MinWidth="100">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    IsChecked="{Binding TrackMouseWheel}">
                                    <CheckBox.Style>
                                        <Style BasedOn="{StaticResource CheckBoxLarge}" TargetType="{x:Type CheckBox}">
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsRunning}" Value="False" />
                                                        <Condition Binding="{Binding CurrentSession.TotalActions}" Value="0" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="IsEnabled" Value="True" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    FontFamily="{StaticResource LatoHeavy}"
                                    FontSize="10"
                                    Foreground="{StaticResource ForegroundLightBrushKey}"
                                    Text="MOUSE WHEEL" />
                            </Grid>

                            <!--  Track Mouse Drag  -->
                            <Grid MinWidth="100">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    IsChecked="{Binding TrackMouseDrag}">
                                    <CheckBox.Style>
                                        <Style BasedOn="{StaticResource CheckBoxLarge}" TargetType="{x:Type CheckBox}">
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsRunning}" Value="False" />
                                                        <Condition Binding="{Binding CurrentSession.TotalActions}" Value="0" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="IsEnabled" Value="True" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <TextBlock
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    FontFamily="{StaticResource LatoHeavy}"
                                    FontSize="10"
                                    Foreground="{StaticResource ForegroundLightBrushKey}"
                                    Text="MOUSE DRAG" />
                            </Grid>
                        </StackPanel>

                    </Grid>
                </Grid>
                <!--  Spacer  -->
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LastSession}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Border Style="{StaticResource FormItemSpacer}" />
                    <Border Style="{StaticResource LineSeparator}" />
                    <Border Style="{StaticResource FormItemSpacer}" />
                </StackPanel>
                <!--  Last Session  -->
                <Grid Grid.Row="2">
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LastSession}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Image Watermark  -->
                    <Image
                        Grid.RowSpan="10"
                        Width="125"
                        Margin="0,35,175,0"
                        VerticalAlignment="Top"
                        Opacity="0.1"
                        Source="/BlackSpiritHelper;component/Resources/Images/Logo/logo_red_text_512.png" />

                    <!--  Title  -->
                    <Grid Grid.Row="0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource LatoBold}"
                            FontSize="26"
                            Foreground="{StaticResource FormTitleForegroundBrushKey}"
                            Text="LAST SESSION" />

                        <!--  Archivate Button  -->
                        <Button
                            Width="20"
                            Height="20"
                            Margin="230,1.5,0,0"
                            Command="{Binding ArchivateCommand}"
                            CommandParameter="{Binding LastSession}"
                            FontFamily="{StaticResource FontAwesomeRegular}"
                            FontSize="17"
                            ToolTipService.ShowOnDisabled="True">
                            <Button.Style>
                                <Style BasedOn="{StaticResource RegularButtonNoColor}" TargetType="{x:Type Button}">
                                    <Setter Property="Content" Value="{StaticResource FontAwesomeArchiveIcon}" />
                                    <Setter Property="IsEnabled" Value="True" />
                                    <Setter Property="ToolTip" Value="Archivate" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LastSession.IsArchived}" Value="True">
                                            <Setter Property="ToolTip" Value="Archived" />
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Setter Property="Content" Value="{StaticResource FontAwesomeCheckCircleIcon}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <!--  Last Session Data  -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Orientation="Vertical">
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="ELAPSED TIME" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="AVERAGE APM" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="HIGHEST APM" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="TOTAL ACTIONS" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Orientation="Vertical">
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding LastSession.ElapsedTime, Converter={local:TimeSpanToStringConverter}, ConverterParameter='hms'}" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding LastSession.AverageApm, StringFormat='{}{0:#,0.#}'}" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding LastSession.HighestApm, StringFormat='{}{0:#,0.#}'}" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="14"
                                Foreground="{StaticResource ForegroundBrushKey}"
                                Text="{Binding LastSession.TotalActions, StringFormat='{}{0:#,0.#}'}" />
                        </StackPanel>
                    </Grid>

                    <!--  Last Session Data - Tracking  -->
                    <Grid Grid.Row="2" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Orientation="Vertical">
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="KEYBOARD" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="MOUSE CLICK" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="MOUSE DOUBLE CLICK" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="MOUSE WHEEL" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundLightBrushKey}"
                                Text="MOUSE DRAG" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Orientation="Vertical">
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundBrushKey}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Text" Value="No" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LastSession.TrackKeyboard}" Value="True">
                                                <Setter Property="Text" Value="Yes" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundBrushKey}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Text" Value="No" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LastSession.TrackMouseClick}" Value="True">
                                                <Setter Property="Text" Value="Yes" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundBrushKey}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Text" Value="No" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LastSession.TrackMouseDoubleClick}" Value="True">
                                                <Setter Property="Text" Value="Yes" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundBrushKey}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Text" Value="No" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LastSession.TrackMouseWheel}" Value="True">
                                                <Setter Property="Text" Value="Yes" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                FontFamily="{StaticResource LatoHeavy}"
                                FontSize="10"
                                Foreground="{StaticResource ForegroundBrushKey}">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Text" Value="No" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LastSession.TrackMouseDrag}" Value="True">
                                                <Setter Property="Text" Value="Yes" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
                <!--  Spacer  -->
                <StackPanel Grid.Row="3" Orientation="Vertical">
                    <Border Style="{StaticResource FormItemSpacer}" />
                    <Border Style="{StaticResource LineSeparator}" />
                    <Border Style="{StaticResource FormItemSpacer}" />
                </StackPanel>
                <!--  Settings Panel  -->
                <Grid Grid.Row="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  AsAdministrator warning  -->
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource LatoRegular}"
                        FontSize="10"
                        Foreground="{StaticResource RedBrushKey}"
                        Text="The application is not running As Administrator. It may not register the inputs while focusing on a different application window."
                        Visibility="{Binding ApplicationViewModel.IsRunningAsAdministratorCheck, Source={x:Static local:ViewModelLocator.Instance}, Converter={local:BooleanToVisibilityGoneConverter}, ConverterParameter=True}" />

                    <!--  Show In Overlay  -->
                    <Grid Grid.Row="1" MinWidth="100">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <CheckBox
                            Grid.Row="0"
                            Margin="0,0,0,5"
                            IsChecked="{Binding ShowInOverlay}"
                            Style="{StaticResource CheckBoxLarge}" />
                        <TextBlock
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource LatoHeavy}"
                            FontSize="10"
                            Foreground="{StaticResource ForegroundLightBrushKey}"
                            Text="SHOW IN OVERLAY" />
                    </Grid>

                    <!--  Spacer  -->
                    <Border Grid.Row="2" Style="{StaticResource FormItemSpacer}" />

                    <!--  Archive Control  -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.Style>
                            <Style TargetType="{x:Type Grid}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ArchiveRecordCount}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <!--  Export Archive BTN  -->
                            <Button
                                Padding="10"
                                Command="{Binding ExportArchiveCommand}"
                                Content="EXPORT ARCHIVE"
                                Style="{StaticResource RegularButton}" />
                            <!--  Reset Archive BTN  -->
                            <Button
                                Margin="10,0,0,0"
                                Padding="10"
                                Command="{Binding ResetArchiveCommand}"
                                Content="RESET ARCHIVE"
                                Style="{StaticResource RegularButtonRed}" />
                        </StackPanel>

                        <!--  Archive status message  -->
                        <TextBlock
                            Grid.Row="1"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource LatoRegular}"
                            FontSize="12"
                            Foreground="{StaticResource ForegroundBrushKey}"
                            Text="{Binding ArchiveRecordCount, StringFormat='Amount of records in the archive: 0'}" />
                    </Grid>

                </Grid>
            </Grid>
        </Border>
    </ScrollViewer>
</local:BasePage>
