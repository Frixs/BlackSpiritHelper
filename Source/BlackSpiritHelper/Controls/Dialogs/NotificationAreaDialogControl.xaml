<UserControl
    x:Class="BlackSpiritHelper.NotificationAreaDialogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlackSpiritHelper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Panel.ZIndex="100"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Opacity="0.85" Color="{StaticResource RedForegroundAltDark}" />
        </Grid.Background>

        <ItemsControl x:Name="ItemList" ItemsSource="{Binding ApplicationUIManager.NotificationList, Source={x:Static local:ViewModelLocator.Instance}}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <local:NotificationWrapperDialogControl VerticalAlignment="Center">
                        <local:NotificationBoxDialogControl />
                    </local:NotificationWrapperDialogControl>

                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>

    </Grid>
</UserControl>
